<style>
    .divider-new,
    .divider-full {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        font-size: 2.5em;
        font-weight: 300;
        margin-top: 45px;
        margin-bottom: 45px;
    }

    .divider-new::after,
    .divider-new::before {
        flex: 1;
        content: '';
        height: 1.5px;
        background: #666
    }

    .divider-new::before {
        margin: 0 .45em 0 0
    }

    .divider-new::after {
        margin: 0 0 0 .45em
    }

    #txtExplain {
        margin-bottom: 20px;
    }

    .hoverable:hover {
        transition: box-shadow .25s;
        box-shadow: 0 8px 17px 0 rgba(0, 0, 0, .2), 0 6px 20px 0 rgba(0, 0, 0, .19);
    }

    .card {
        background-color: #2BBBAD;
        color: #FFF;
        margin: .5rem 0 3rem;
        transition: box-shadow .25s;
        border-radius: 2px;
        min-height: 380px;
        box-shadow: 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12);
    }

    @media (max-width: 1200px) {
        .card {
            min-height: 400px;
        }
    }

    .card-header {
        height: 45px;
        border-bottom: 4px solid white;
        background-color: #2E2E2E
    }

    .card-title {
        line-height: 20px !important;
        margin: 2px 0;
        font-size: 24px;
        font-weight: 300;
    }

    .card-subtitle {
        margin: 10px 0;
        font-size: 18px;
    }

    .card .card-content {
        padding: 20px;
        border-radius: 0 0 2px 2px;
        clear: both;
    }

    .card-content p {
        font-size: 14px;
    }

    .long-desc {
        position: relative;
        /* top: -20px; */
    }

    .long-desc p {
        clear: both;
    }

    .img-prod {
        position: relative;
        float: right;
        top: -45px;
    }

    .btn-prod {
        display: block;
    }

    #img1 {
        display: none;
    }

    #img2 {
        display: none;
    }

    #img3 {
        display: none;
    }
</style>
